<!--head -->
<%- include('../../includes/header/place_edit_head.ejs')%>
<!-- fim head -->

<!-- inicio body -->

<div class="page-header">
  <%- include('../../includes/nav_top.ejs')%>
</div>

<!-- conteudo  da página -->
<div class="container-fluid ml-0 mt-2 ">
  <div class="row">
    <div class="col-md-12 ">
      <h5 class="text-center text-light mt-1 lordOfRingsFont "><%=page_subtitle%></h5>
    </div>
  </div>
  <hr>

  <div class="row justify-content-center">
    <div class="col-4">

      <form id="form_place" class="form-horizontal " enctype="multipart/form-data" action="/admin/place/edit"
        method="POST">

        <input type="hidden" class="form-control " style="text-align: left" name="id" id="id" value="<%=place.id  %> ">

        <div class="form-group">

          <label class="text-light">Nome</label>
          <input type="text" class="form-control " style="text-align: left" name="form_name" id="form_name"
            value="<%=place.name%>">

        </div>

        <div class="form-group">

          <label class="text-light">Descrição</label>
          <textarea class="form-control " id=" form_description"name="form_description" id="" cols="30" rows="10"><%=place.description%></textarea>

        </div>

        <div class="form-group">

          <label class="text-light">Imagem</label>
          <br>
          <span id='file-url' class="text-light"><%=place.image_URL%> </span>
          <br>
          <input type="file" name="myFile" id="myFile" class="text-light" style=" width: fit-content; background-color: none;" />

        </div>

        <hr>

        <div class="form-group">

          <button type="button" class="btn text-white background_blue  mr-4" data-dismiss="modal"
            onclick="bt_back()">Voltar</button>
          <button type="button" class="btn btn-success" onclick="send_form()">Salvar</button>

        </div>

    </div>
  </div>
</div>

<%- include('../../includes/modal/modal_msg.ejs')%>

<%- include('../../includes/footer/place_edit_footer.ejs')%>