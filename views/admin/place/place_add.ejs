<!-- inicio body -->

<div class="page-header">
  <%- include('../../includes/nav_top.ejs')%>
</div>

<!-- conteudo  da página -->
<div class="container-fluid ml-0 mt-2 ">
  <div class="row">
    <div class="col-md-12 ">
      <h5 class="text-center text-light mt-1 lordOfRingsFont "><%=page_subtitle%></h5>
    </div>
  </div>
  <hr>

  <div class="row  justify-content-center">
    <div class="col-4">
   
    <form id="form_place" enctype="multipart/form-data" action="/admin/place/add" method="POST">

        <div class="form-group">

          <label class=" text-light  shadow">Nome</label>
          <input type="text" class="form-control " style="text-align: left" name="form_name" id="form_name">

        </div>

        <div class="form-group">
          <label class="text-light shadow"> Descrição</label>
          <textarea class="form-control " id=" form_description"name="form_description" id="" cols="30" rows="10"></textarea>
        </div>

        <div class="form-group">

          <label class="text-light shadow">Imagem</label>
          <input type="file" name="myFile" id="myFile" class="form-control" />

        </div>

        <div class="form-group">

          <button type="button" class="btn text-white background_blue  mr-4" data-dismiss="modal"
            onclick="bt_back()">Voltar</button>

          <button type="button" class="btn btn-success" onclick="send_form()">Salvar</button>

        </div>

    </div>
  </div>
</div>

